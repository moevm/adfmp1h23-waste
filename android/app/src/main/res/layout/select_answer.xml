<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:alpha="1"
	android:background="#00FF0000"
	android:backgroundTint="#FF0000"
	android:fillViewport="true">


	<ScrollView
		android:id="@+id/select_answer"
		android:layout_width="wrap_content"
		android:layout_height="match_parent">

		<RelativeLayout
			android:id="@+id/content_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:alpha="1">


			<RelativeLayout
				android:id="@+id/vardepth"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="0dp"
				android:layout_marginTop="0dp">


				<RelativeLayout
					android:id="@+id/goal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="2dp"
					android:layout_marginTop="0dp">

					<View
						android:id="@+id/button"
						android:layout_width="99dp"
						android:layout_height="140dp"
						android:layout_marginStart="0dp"
						android:layout_marginTop="0dp"
						android:alpha="0.74"
						android:background="@drawable/answer_select_button" />

					<TextView
						android:id="@+id/description"
						android:layout_width="57.599999904633dp"
						android:layout_height="30.599999904633dp"
						android:layout_marginLeft="8dp"
						android:layout_marginTop="107dp"
						android:fontFamily="@font/relay_cabin_regular"
						android:text="@string/description_string"
						android:textColor="@color/description_color"
						android:textSize="13.2sp" />

					<TextView
						android:id="@+id/title"
						android:layout_width="26.5dp"
						android:layout_height="33.5dp"
						android:layout_marginLeft="14dp"
						android:layout_marginTop="84dp"
						android:fontFamily="@font/relay_poppins_regular"
						android:text="@string/title_string"
						android:textColor="@color/description_color"
						android:textSize="15sp"
						android:textStyle="bold" />

				</RelativeLayout>


				<RelativeLayout
					android:id="@+id/image"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="0dp"
					android:layout_marginTop="10dp">

					<ImageView
						android:id="@+id/file"
						android:layout_width="74dp"
						android:layout_height="50dp"
						android:layout_marginStart="0dp"
						android:layout_marginTop="0dp"
						android:contentDescription="file"
						android:src="@drawable/file" />

				</RelativeLayout>

			</RelativeLayout>

		</RelativeLayout>

	</ScrollView>
</HorizontalScrollView>

